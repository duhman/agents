{
  "display_information": {
    "name": "Email Draft Reviewer Bot",
    "description": "Slack bot for human-in-the-middle (HITM) workflow: posts AI-generated email drafts for human review with approve/edit/reject actions.",
    "background_color": "#000000"
  },
  "features": {
    "bot_user": {
      "display_name": "Email Draft Reviewer",
      "always_online": false
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "commands",
        "im:write",
        "channels:read",
        "groups:read",
        "users:read",
        "users:read.email"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url_verification_enabled": true,
      "events_api_enabled": true,
      "subscriptions": []
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://your-domain.vercel.app/api/slack/interactions",
      "message_menu_options_url": "https://your-domain.vercel.app/api/slack/interactions"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
