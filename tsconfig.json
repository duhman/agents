{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@agents/core": ["packages/core/src/index.ts"],
      "@agents/db": ["packages/db/src/index.ts"],
      "@agents/prompts": ["packages/prompts/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
