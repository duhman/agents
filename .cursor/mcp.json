{
  "mcpServers": {
    "exa": {
      "enabled": true,
      "description": "Web search and code context via Exa AI",
      "config": {
        "apiKey": "${EXA_API_KEY}",
        "tools": [
          "web_search",
          "get_code_context"
        ]
      },
      "useFor": [
        "Finding latest OpenAI API patterns",
        "Researching Drizzle ORM best practices",
        "Looking up Vercel deployment patterns",
        "Slack Bolt API examples",
        "HubSpot Conversations API documentation",
        "Cursor IDE latest features and updates"
      ]
    },
    "context7": {
      "enabled": true,
      "description": "Library documentation and code snippets",
      "config": {
        "libraries": [
          "/openai/openai-node",
          "/openai/openai-agents-js",
          "/drizzle-team/drizzle-orm-docs",
          "/vercel/next.js",
          "/slackapi/bolt-js"
        ]
      },
      "useFor": [
        "OpenAI structured outputs documentation",
        "Drizzle schema and migration patterns",
        "Vercel Functions configuration",
        "Slack interactive messages and modals"
      ]
    },
    "cursor-rules": {
      "enabled": true,
      "description": "Automated Cursor rules generation and management",
      "config": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-cursor-rules"],
        "env": {
          "RULES_DIR": ".cursor/rules"
        }
      },
      "useFor": [
        "Automatically generating .cursor/rules files",
        "Updating rules based on codebase changes",
        "Maintaining rule consistency"
      ]
    }
  },
  "defaultServer": "context7",
  "fallbackToWeb": true,
  "cacheResponses": true,
  "cacheTTL": 3600,
  "automation": {
    "enabled": true,
    "triggers": [
      {
        "name": "on_schema_change",
        "files": ["packages/db/src/schema.ts"],
        "action": "update_db_rules"
      },
      {
        "name": "on_prompt_change",
        "files": ["packages/prompts/src/templates.ts"],
        "action": "update_prompt_rules"
      },
      {
        "name": "on_package_change",
        "files": ["package.json", "packages/*/package.json"],
        "action": "update_dependency_rules"
      }
    ]
  }
}

