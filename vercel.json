{
  "buildCommand": "pnpm install && pnpm build",
  "outputDirectory": "public",
  "crons": [
    {
      "path": "/api/cron/export-training-data",
      "schedule": "0 0 1 * *"
    }
  ],
  "functions": {
    "api/webhook.ts": {
      "maxDuration": 30,
      "includeFiles": ["apps/agent/dist/**", "apps/slack-bot/dist/**"]
    },
    "api/*.ts": {
      "maxDuration": 30
    },
    "api/cron/*.ts": {
      "maxDuration": 300
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"],
  "framework": null,
  "devCommand": "pnpm build && node --require dotenv/config ./node_modules/.bin/vercel dev"
}
