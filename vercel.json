{
  "buildCommand": "pnpm install && pnpm build",
  "rewrites": [
    { "source": "/api/slack/(.*)", "destination": "/apps/slack-bot/api/$1" },
    { "source": "/api/agent/(.*)", "destination": "/apps/agent/api/$1" },
    { "source": "/api/mailer/(.*)", "destination": "/apps/mailer/api/$1" }
  ],
  "crons": [
    {
      "path": "/api/cron/export-training-data",
      "schedule": "0 0 1 * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

