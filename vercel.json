{
  "buildCommand": "pnpm install && pnpm build",
  "crons": [
    {
      "path": "/api/cron/process-slack-retry",
      "schedule": "*/5 * * * *"
    }
  ],
  "functions": {
    "api/webhook.ts": {
      "maxDuration": 30
    },
    "api/health.ts": {
      "maxDuration": 10
    },
    "api/slack/*.ts": {
      "maxDuration": 30
    },
    "api/cron/*.ts": {
      "maxDuration": 300
    }
  }
}
